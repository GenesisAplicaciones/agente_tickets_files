<customwindows:LoaderWindow
    x:Class="AgenteTickets.Views.AppLoaderWindow"
    xmlns:customwindows="clr-namespace:ACTools.NetFramework.Controls;assembly=ACTools.NetFramework"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:ACTools.NetFramework.ViewModels;assembly=ACTools.NetFramework"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanMinimize"
    Title="Loading"
    Height="200"
    Width="400">
    <customwindows:LoaderWindow.Resources>
        <viewmodels:LoaderViewModel x:Key="ViewModel"/>
    </customwindows:LoaderWindow.Resources>
    <customwindows:LoaderWindow.DataContext>
        <Binding Source="{StaticResource ViewModel}"/>
    </customwindows:LoaderWindow.DataContext>
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=customwindows:LoaderWindow}, Path=ModalTitle}"/>

            <StackPanel
                Grid.Row="1"
                VerticalAlignment="Center">
                <TextBlock
                    Margin="0 0 0 5"
                    Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=customwindows:LoaderWindow}, Path=ModalText}"/>

                <ProgressBar
                    Margin="0 0 0 10"
                    IsIndeterminate="True"
                    Height="15"/>

                <Button
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    Visibility="{Binding ButtonCancelVisibility}"
                    Command="{Binding AbortThreadCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=customwindows:LoaderWindow}}"
                    Content="Cancelar"/>
            </StackPanel>
        </Grid>
    </Grid>
</customwindows:LoaderWindow>
